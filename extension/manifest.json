{
    "manifest_version": 3,
    "name": "Productivv",
    "version": "1.0",
    "description": "Browser extension to track productivity and time usage.",
    "permissions": ["tabs", "storage", "activeTab"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "assets/icon.png"
    },
    "icons": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }
  